        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">

        <activity android:name=".activities.HartSkillCheckListActivity"/>
        <activity android:name="com.h2h.medical.activities.WebViewActivity"
            android:exported="true"/>
        <activity android:name="com.h2h.medical.activities.ContactUsActivity"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.ExperimentalActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.DailyFlowSheetTimeZoneForm"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.WeeklyFlowSheetActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.PdfViewActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.NursingAssessmentFormActivity"
            android:screenOrientation="portrait"
