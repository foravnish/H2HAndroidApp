            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.HomeActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.PDFActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.SignupActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity
            android:name="com.h2h.medical.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
