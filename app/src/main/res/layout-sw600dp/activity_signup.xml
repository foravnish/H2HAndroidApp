<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            style="@style/SignupLogo"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout style="@style/SignupMainView">

            <EditText
                android:id="@+id/et_user_name"
                style="@style/LoginEditText"
                android:background="@color/white"
                android:hint="@string/user_name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black2" />

            <ImageView
                style="@style/LoginFieldsLogo"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_user_name"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout style="@style/SignupMainView">

            <EditText
                android:id="@+id/et_email"
                style="@style/LoginEditText"
                android:background="@color/white"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black2" />

            <ImageView
                style="@style/LoginFieldsLogo"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mail" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_email"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout style="@style/SignupMainView">

            <EditText
                android:id="@+id/et_phone_number"
                style="@style/LoginEditText"
                android:background="@color/white"
                android:hint="@string/phone_no"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black2" />

            <ImageView
                style="@style/LoginFieldsLogo"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_phone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_phone_number"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout style="@style/SignupMainView">

            <EditText
                android:id="@+id/et_password"
                style="@style/LoginEditText"
                android:background="@color/white"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black2" />

            <ImageView
                style="@style/LoginFieldsLogo"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_password" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_password"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout style="@style/SignupMainView">

            <EditText
                android:id="@+id/et_confirm_password"
                style="@style/LoginEditText"
                android:background="@color/white"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black2" />

            <ImageView
                style="@style/LoginFieldsLogo"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_password" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_confirm_password"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_sign_up"
            style="@style/LoginButton"
            android:background="@drawable/background_login_button"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            style="@style/SignupMainView"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/already_have_an_account"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/sign_in"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>