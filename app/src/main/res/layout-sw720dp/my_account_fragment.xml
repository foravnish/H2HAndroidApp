<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/MyAccountProfileImage"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_user_profile"
                style="@style/MyAccountProfileImage"
                android:src="@drawable/ic_profile" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/dp_20"
            android:background="@color/black2" />

        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_chek_list"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/check_mark" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="@string/chk_list" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_edit_profile"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/ic_edit_profile" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_contact_us"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/ic_contact_us" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="@string/contact_us" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_pdf"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/ic_contact_us" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="View PDF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_privacy_policy"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/ic_privacy_policy" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="@string/privacy_policy" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_terms"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/ic_terms_and_conditions" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="@string/terms_and_conditions" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/StyleAdapterCardView">

            <LinearLayout
                android:id="@+id/ll_logout"
                style="@style/MyAccountItem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/MyAccountItemIcon"
                    android:src="@drawable/ic_logout" />

                <TextView
                    style="@style/MyAccountItemText"
                    android:layout_gravity="center_vertical"
                    android:text="@string/logout" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtVersionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_18"
            android:text="v" />

    </LinearLayout>
</ScrollView>